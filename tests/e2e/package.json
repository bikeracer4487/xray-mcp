{
  "name": "xray-mcp-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for Xray MCP server with Playwright visual verification",
  "scripts": {
    "test": "pytest -v",
    "test:contracts": "pytest contracts/ -v",
    "test:visual": "pytest visual/ -v",
    "test:integration": "pytest integration/ -v",
    "test:headed": "pytest visual/ -v --headed",
    "install-browsers": "npx playwright install",
    "install-browsers-deps": "npx playwright install-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  },
  "keywords": ["xray", "mcp", "testing", "playwright", "e2e"],
  "author": "",
  "license": "MIT"
}