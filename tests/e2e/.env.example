# Xray MCP E2E Test Configuration

# Xray API Configuration
XRAY_CLIENT_ID=your_xray_client_id_here
XRAY_CLIENT_SECRET=your_xray_client_secret_here
XRAY_BASE_URL=https://xray.cloud.getxray.app

# Jira Configuration for Visual Tests
JIRA_BASE_URL=https://your-instance.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token

# Test Configuration
TEST_PROJECT=TEST
TEST_LABEL=xray-mcp-e2e-test

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_SERVER_TIMEOUT=30

# Browser Configuration for Visual Tests
BROWSER_HEADLESS=true
BROWSER_SLOW_MO=0
BROWSER_TIMEOUT=30000

# Test Data Configuration
TEST_DATA_PREFIX=XrayMCP_E2E
CLEANUP_ON_SUCCESS=true
CLEANUP_ON_FAILURE=false

# Debug Configuration
DEBUG_LEVEL=INFO
CAPTURE_SCREENSHOTS=true
CAPTURE_VIDEOS=false